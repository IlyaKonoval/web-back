{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "views/**/*", "watchAssets": true, "outDir": "dist/src" },
      { "include": "../public/**/*", "watchAssets": true, "outDir": "dist" }
    ],
    "watchAssets": true
  }
}