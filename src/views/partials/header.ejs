<header class="bg-blue-500 text-white py-4">
    <nav class="container mx-auto flex justify-between items-center px-4">
        <ul class="flex space-x-4">
            <li><a href="/" class="hover:text-blue-200">Home</a></li>
            <li><a href="/portfolio" class="hover:text-blue-200">Portfolio</a></li>
            <li><a href="/promise" class="hover:text-blue-200">Promise</a></li>
            <% if (locals.user && locals.user.role === 'ADMIN') { %>
                <li><a href="/user-views" class="hover:text-blue-200">Управление пользователями</a></li>
            <% } %>
        </ul>
        <div class="flex items-center space-x-4">
            <% if (locals.user) { %>
                <div class="flex items-center">
                    <span class="mr-2">
                        <%= user.username %>
                        <% if (user.role === 'ADMIN') { %>
                            <span class="bg-yellow-500 text-xs font-semibold text-black px-2 py-1 rounded-full ml-1">Админ</span>
                        <% } %>
                    </span>
                    <a href="/auth/signout" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm">
                        Выйти
                    </a>
                </div>
            <% } else { %>
                <div class="flex space-x-2">
                    <a href="/auth/signin" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm">
                        Войти
                    </a>
                    <a href="/auth/signup" class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm">
                        Регистрация
                    </a>
                </div>
            <% } %>
        </div>
    </nav>
</header>